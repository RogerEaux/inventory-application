<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>
    <%= title %>
  </title>
</head>

<body>
  <%- include('../general/navBar') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <form method="post">
        <label>
          <span>*Name: </span>
          <input required name="name" id="name" type="text" placeholder="Name of dog" value="<%=dog ? dog.name : '' %>">
        </label>
        <label>
          <span>*Breed: </span>
          <select name="breed" id="breed" required>
            <option value="">--Select a breed--</option>
            <% breeds.forEach((breed)=> { %>
              <% if(dog) { %>
                <% if(dog.breed._id.toString()===breed._id.toString()) { %>
                  <option value="<%=breed._id %>" selected>
                    <%= breed.name %>
                  </option>
                  <% } else { %>
                    <option value="<%=breed._id %>">
                      <%= breed.name %>
                    </option>
                    <% } %>
                      <% } else { %>
                        <option value="<%=breed._id %>">
                          <%= breed.name %>
                        </option>
                        <% } %>
                          <% }) %>
          </select>
        </label>
        <label>
          <span>Age (years): </span>
          <input name="age" id="age" type="number" placeholder="Age of dog" step="any" min="0"
            value="<%=dog ? dog.age : '' %>">
        </label>
        <label>
          <span>Weight (kg): </span>
          <input name="weight" id="weight" type="number" placeholder="Weight of dog" step="any" min="0"
            value="<%=dog ? dog.weight : '' %>">
        </label>
        <label>
          <span>Height (cm): </span>
          <input name="height" id="height" type="number" placeholder="Height of dog" step="any" min="0"
            value="<%=dog ? dog.height : '' %>">
        </label>
        <button type="submit">Submit</button>
      </form>

      <% if(errors){ %>
        <ul>
          <% errors.forEach((error)=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>
    </main>
    <%- include('../general/addendum') %>
</body>

</html>